<% layout('layouts/boilerplate.ejs') %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br><br>
            <h2>Create a New Listing</h2>

            <!-- here we have to create a new list and have to post so we have took the form -->

            <form method="POST" action="/listings" class="needs-validation" 
            novalidate enctype="multipart/form-data">
<!-- here we used enctype='multipart' because by that we can send filed and imgs to backend -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required/>
                    <div class="valid-feedback">
                        Perfect Title!!
                    </div>
                    <!-- when we entered wrong then invalid feedback -->
                    <div class="invalid-feedback">
                        Please enter valid Title!!
                     </div>
                </div>
     <!-- here we created a key:title in listing same for all.  -->
     <!-- and also class is for valid check in fields and if the field is correct then it gives perfect -->


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please enter a short description !
                     </div>
                    

                </div>

                 
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>

                    <input type="file" name="listing[image]"  class="form-control"   />
                    required

                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Enter Price" class="form-control"
                            min="100" required />
                            <div class="invalid-feedback">
                               Please enter valid price!!
                            </div>

                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>

                        <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required />
                        <div class="invalid-feedback">
                            Country name should br valid!!
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required />
                    <div class="invalid-feedback">
                        Location name should br valid!!
                    </div>
                </div>





                <button class="btn btn-dark add-btn mt-3">ADD</button>
            </form>
        </div>
    </div>


    <!-- here its the bootstrap code where we used  -->